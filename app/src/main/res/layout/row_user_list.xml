<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnAnim"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="center"
                android:src="@drawable/no_image_user"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center|left">

                    <com.patelapp.Custom.CustomTextView
                        style="@style/lvText"
                        android:text="Name:"
                        android:textColor="@color/blue_dark"
                        android:textSize="@dimen/_16sdp"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center|left">

                    <com.patelapp.Custom.CustomTextView
                        android:id="@+id/tvName"
                        style="@style/lvText"
                        android:textSize="@dimen/_14sdp"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />
                </LinearLayout>


            </LinearLayout>

            <!-- Society -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center|left">

                    <com.patelapp.Custom.CustomTextView
                        style="@style/lvText"
                        android:text="Society:"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/blue_light"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center|left">

                    <com.patelapp.Custom.CustomTextView
                        android:id="@+id/tvSociety"
                        style="@style/lvText"
                        android:textSize="@dimen/_14sdp"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />
                </LinearLayout>

            </LinearLayout>

            <!-- Date of birth -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center|left">


                    <com.patelapp.Custom.CustomTextView
                        style="@style/lvText"
                        android:text="DOB:"
                        android:textColor="@color/blue_light"
                        android:textSize="@dimen/_16sdp"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center|left">


                    <com.patelapp.Custom.CustomTextView
                        android:id="@+id/tvDob"
                        style="@style/lvText"
                        android:textSize="@dimen/_14sdp"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>