<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnAnim"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivStoreItem"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical">


            <com.patelapp.Custom.CustomTextView
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="1dp"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/_18sdp"
                custom_font:custom_font="@string/font_clan_pro_narrbok" />

            <com.patelapp.Custom.CustomTextView
                android:id="@+id/tvItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="1dp"
                android:singleLine="true"
                android:text="1000 RS."
                android:textSize="@dimen/_12sdp"
                custom_font:custom_font="@string/font_clan_pro_narrbok" />

            <com.patelapp.Custom.CustomTextView
                android:id="@+id/tvItemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginLeft="10dp"
                android:maxLines="3"
                android:padding="1dp"
                android:text="This is description"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_12sdp"
                custom_font:custom_font="@string/font_clan_pro_narrbok" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/timer" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:orientation="vertical">

                    <com.patelapp.Custom.CustomTextView
                        android:id="@+id/tvPostDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="27-01-2016"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_12sdp"
                        custom_font:custom_font="@string/font_clan_pro_narrbok" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>