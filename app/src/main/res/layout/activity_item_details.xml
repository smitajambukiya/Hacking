<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom_font="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llIvStore1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/ivStore1"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@drawable/no_image_user" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llIvStore2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivStore2"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="fitXY"
                            android:background="@drawable/no_image_user" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llIvStore3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivStore3"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="fitXY"
                            android:background="@drawable/no_image_user" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.patelapp.Custom.CustomTextView
                        android:id="@+id/tvItemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="I want to urgent sell my phone"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        app:custom_font="@string/font_clan_pro_narrbok"
                        />
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/_10sdp">


                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.patelapp.Custom.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="RS :"
                                android:textColor="@color/text_blue"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_5sdp"
                                android:text="2000"
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.patelapp.Custom.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="QTY :"
                                android:textColor="@color/text_blue"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvQty"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_5sdp"
                                android:text="10 "
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                        </LinearLayout>


                        <!--category-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <com.patelapp.Custom.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Category :"
                                android:textColor="@color/text_blue"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />


                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvCategory"
                                android:layout_width="0dp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/_5sdp"
                                android:text="10"
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.patelapp.Custom.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Description :"
                                android:textColor="@color/text_blue"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvItemDesc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLength="180"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/username" />

                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvContactName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Pratap Solanki"
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/ivCall"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:clickable="true"
                                android:src="@drawable/ic_phone" />


                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvContactNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="97243-68362"
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/map" />


                            <com.patelapp.Custom.CustomTextView
                                android:id="@+id/tvAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Ahmedabad."
                                android:textColor="@color/black_light"
                                app:custom_font="@string/font_clan_pro_narrbok"
                                />

                        </LinearLayout>


                        <com.patelapp.Custom.CustomButton
                            android:id="@+id/btnRemoveItem"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:background="@color/blue_light"
                            android:text="Remove "
                            android:visibility="gone"
                            android:textColor="@drawable/text_color"
                            custom_font:custom_font="@string/font_clan_pro_narrbok"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/llTouchZoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:background="@android:color/transparent"
            >
            <com.patelapp.Custom.TouchImageView
                android:id="@+id/ivTouchZoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </FrameLayout>
</LinearLayout>